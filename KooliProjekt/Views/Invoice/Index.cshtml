@model KooliProjekt.Data.PagedResult<KooliProjekt.Data.Invoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    | <a asp-action="Create">Create New</a> | 
    <a asp-controller="Customer" asp-action="AdminPanel">Go Back to Admin Panel</a> |
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                WhenTaken
            </th>
            <th>
                GivenBack
            </th>
            <th>
                DistanceDriven
            </th>
            <th>
                TotalPrice
            </th>
            <th>
                PayBy
            </th>
            <th>
                PayStatus
            </th>
            <th>
                Customer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.CarName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhenTaken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GivenBack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistanceDriven)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@(await Component.InvokeAsync<KooliProjekt.Components.PagerViewComponent>(new { result = Model, viewName = "Default" }))