@model KooliProjekt.Data.Invoice

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhenTaken" class="control-label"></label>
                <input asp-for="WhenTaken" class="form-control" />
                <span asp-validation-for="WhenTaken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GivenBack" class="control-label"></label>
                <input asp-for="GivenBack" class="form-control" />
                <span asp-validation-for="GivenBack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistanceDriven" class="control-label"></label>
                <input asp-for="DistanceDriven" class="form-control" />
                <span asp-validation-for="DistanceDriven" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayBy" class="control-label"></label>
                <input asp-for="PayBy" class="form-control" />
                <span asp-validation-for="PayBy" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PayStatus" /> @Html.DisplayNameFor(model => model.PayStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
