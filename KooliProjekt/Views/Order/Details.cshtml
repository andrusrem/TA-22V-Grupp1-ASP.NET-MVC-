@model KooliProjekt.Order

@{
    ViewData["Title"] = "Details";
}

<style>
    dd
    {
        text-align: center;
    }
</style>
<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.CarName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductEstimatedPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductEstimatedPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
    </dl>
    
</div>
<div>
    
    |@if(User.IsInRole("Admin")){<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> <a asp-action="Index">Back to List</a>}  
    @if(!User.IsInRole("Admin")){<a asp-action="Myorders">Back to My Orders</a>}|
</div>
