@model KooliProjekt.Data.PagedResult<KooliProjekt.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    | <a asp-action="Create">Create New</a> | 
    <a asp-controller="Customer" asp-action="AdminPanel">Back to Admin Panel</a> |
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                CarName
            </th>
            <th>
                EstimatedPrice
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.CarName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductEstimatedPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>

@(await Component.InvokeAsync<KooliProjekt.Components.PagerViewComponent>(new { result = Model, viewName = "Default" }))